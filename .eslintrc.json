{
	"env": {
		"es6": true,
		"node": true
	},
	"extends": "eslint:recommended",
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 2017,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true,
			"modules": true,
			"experimentalObjectRestSpread": true
		}
	},
	"plugins": [
		"react"
	],
	"rules": {
		"indent": [
			"error",
			"tab",
			{ "MemberExpression": 0 }
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		],
        "no-var": "error",
        "prefer-const": "error",
        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": "error"
	},
	"globals": {
		"describe": false,
		"it": false,
		"expect": false
	}
}
